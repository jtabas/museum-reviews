<% if controller.action_name == "show" %>
  <h2>Write a new review</h2>
<%elsif controller.action_name == "edit" %>
  <h2>Edit your review</h2>
<%end%>

<%= form_for [@museum, @review] do |form| %>
  <div class="rating">
    <%= form.label :rating %>
    <%= form.text_field :rating %>
  </div>

  <div class="body">
    <%= form.label :body, "Your Review"%>
    <%= form.text_area :body %>
  </div>

  <%= form.submit %>
<% end %>
