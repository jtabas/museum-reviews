<h1><%= @museum.name %></h1>
Hours:
<% @hours.each do |day| %>
<li><%= day %></li>
<% end %>
<br>
<h3>Rating: <%= @rating %></h3>
Address: <%= @museum.location %><br>
Website: <%= @museum.website %><br>
Phone: <%= @museum.phone_number %><br>
</p>

<h2>Reviews</h2>
<% if @reviews %>
  <% @reviews.each do |review| %>
    <p id="score_<%= review.id %>">
      Score: <%= review.score %>
    </p>
    <button id="<%= review.id%>" class="upvote">Upvote</button>
    <button id="<%= review.id%>" class="downvote">Downvote</button>
    <% if review.body %>
      <p>Body: <%= review.body %></p>
    <% end %>

    <% if user_signed_in? && review.user == current_user%>
    <%= link_to 'Edit This Review', edit_museum_review_path(review.museum, review) %>
    <%= link_to 'Delete This Review', museum_review_path(review.museum, review), method: :delete %>
    <% end %>

    <% if user_signed_in? && current_user.admin %>
    <%= link_to 'Delete as Admin', admin_review_path(review), method: :delete %>
    <% end %>
  <% end %>
<% end %>

<% if user_signed_in? && !current_user.reviews.include?(Review.find_by(museum_id: @museum.id))%>
  <%= render "reviews/review_form" %>
<% else %>
  <ul>
    <h4> Please sign in or create an account to leave your review. </h4>
    <li><%= link_to "Create Account", new_user_registration_path%></li>
    <li><%= link_to "Sign In", new_user_session_path%></li>
  </ul>
<% end %>
